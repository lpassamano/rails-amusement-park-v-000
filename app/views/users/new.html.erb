<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %><br />

    <%= f.label :password %>
    <%= f.password_field :password %><br />

    <%= f.label :admin %>
    <%= f.check_box :admin %>
  </p>

  <p>
    <%= f.label :happiness %>
    <%= f.text_field :happiness %><br />

    <%= f.label :nausea %>
    <%= f.text_field :nausea %><br />

    <%= f.label :tickets %>
    <%= f.text_field :tickets %><br />

    <%= f.label "Heigh in Inches" %>
    <%= f.text_field :height %><br />
  </p>
  <%= f.submit %>
<% end %>
